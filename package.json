{
  "name": "workers-jobs-manager",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "concurrently -k -n backend,frontend -c blue,green \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "backend/.venv/bin/uvicorn app.main:app --reload --port 8000 --app-dir backend",
    "dev:frontend": "npm --prefix frontend run dev",
    "install:all": "npm --prefix frontend install && python3 -m venv backend/.venv && backend/.venv/bin/pip install -r backend/requirements.txt",
    "test": "npm --prefix frontend test && pytest -q backend/tests"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}

